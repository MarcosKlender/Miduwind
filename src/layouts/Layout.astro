---
interface LayoutProps {
	lang: string;
	title: string;
	description: string;
	favicon: string;
	topColor: string;
	bottomColor: string;
}

import "@/styles/global.css";
import { html } from "@/data.json";

const { lang, title, description, favicon, topColor, bottomColor } = html satisfies LayoutProps;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href={favicon} />
		<title>{title}</title>
	</head>
	<body class=`w-5/6 md:w-2/4 mx-auto h-dvh m-0 bg-linear-to-b from-[${topColor}] to-[${bottomColor}]`>
		<slot />
	</body>
</html>
